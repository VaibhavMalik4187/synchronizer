        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "env": {
                "CONFIG": "${workspaceFolder}/configuration/server"
            }
        },
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/client/main.go",
            "env": {
                "CONFIG": "${workspaceFolder}/configuration/client"
            }
        }
    ]
}